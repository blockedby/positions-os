# ============================================================
# job-hunter-os environment variables
# ============================================================

# postgresql
POSTGRES_USER=jhos
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=jhos
DATABASE_URL=postgres://jhos:change_me_in_production@localhost:5432/jhos?sslmode=disable

# nats message broker
NATS_URL=nats://localhost:4222

# telegram api credentials (get from https://my.telegram.org)
TG_API_ID=
TG_API_HASH=

# telegram session string (generated after first auth via cmd/tg-auth)
# keep this secret! it provides full access to your account
TG_SESSION_STRING=

# collector service (phase 1)
COLLECTOR_PORT=3100
COLLECTOR_LOG_LEVEL=info
COLLECTOR_LOG_FILE=./logs/collector.log

# analyzer / llm settings (phase 2)
LLM_BASE_URL=http://localhost:1234/v1
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SECONDS=60

# optional: proxy for telegram (format: socks5://user:pass@host:port)
TG_PROXY_URL=
