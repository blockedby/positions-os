# ============================================================
# job-hunter-os environment variables
# ============================================================

# 1. Core Infrastructure
POSTGRES_USER=jhos
POSTGRES_PASSWORD=jhos_secret
POSTGRES_DB=jhos
DATABASE_URL=postgres://jhos:jhos_secret@localhost:5432/jhos?sslmode=disable

# NATS message broker
NATS_URL=nats://localhost:4222

# 2. Telegram API Credentials (get from https://my.telegram.org)
TG_API_ID=
TG_API_HASH=

# Telegram session string (generated after first auth via cmd/tg-auth)
# Keep this secret! It provides full access to your account.
TG_SESSION_STRING=

# 3. Web UI & Collector Settings
HTTP_PORT=3100
LOG_LEVEL=info
LOG_FILE=./logs/app.log
STATIC_DIR=./static
TEMPLATES_DIR=./internal/web/templates

# 4. LLM / Analyzer Settings (LM Studio defaults)
LLM_BASE_URL=http://localhost:1234/v1
LLM_MODEL=local-model
LLM_API_KEY=
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SECONDS=60

# Optional: Proxy for Telegram (format: socks5://user:pass@host:port)
TG_PROXY_URL=
